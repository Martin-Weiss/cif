<?xml version="1.0"?>
<!DOCTYPE profile>
<profile xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">
  <novell-dhcp>
    <certificate_authority></certificate_authority>
    <check_method>never</check_method>
    <client_certificate></client_certificate>
    <client_key></client_key>
    <dhcp_ldap_port config:type="integer">636</dhcp_ldap_port>
    <group_context>%%DHCP_GROUP_CONTEXT%%</group_context>
    <interfaces>%%DHCP_INTERFACES%%</interfaces>
    <locator_context>%%DHCP_LOCATOR_CONTEXT%%</locator_context>
    <ldap_debug_file>/var/log/dhcp-ldap-startup.log</ldap_debug_file>
    <ldap_method>static</ldap_method>
    <ldap_referrals>no</ldap_referrals>
    <ldap_server>%%IP_ADDRESS%%</ldap_server>
    <ldap_user>cn=OESCommonProxy_%%HOST_NAME%%,%%SERVER_CONTEXT%%</ldap_user>
<!--    <ldap_user_password>Replace this text with the real password</ldap_user_password> -->
    <server_context>%%DHCP_SERVER_CTX%%</server_context>
    <server_object_name>DHCP_%%HOST_NAME%%</server_object_name>
    <use_secure_port>yes</use_secure_port>
    <use_secure_port_config>yes</use_secure_port_config>
  </novell-dhcp>
</profile>
