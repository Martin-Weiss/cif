<?xml version="1.0"?>
<!DOCTYPE profile>
<profile xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">
  <scripts>
    <chroot-scripts config:type="list">
      <script>
        <chrooted config:type="boolean">true</chrooted>
        <filename>set_salt_master.sh</filename>
        <interpreter>shell</interpreter>
        <source><![CDATA[
        #!/bin/sh
        echo "master: %%SALT_MASTER%%" > /etc/salt/minion.d/minion.conf
        echo "grains_refresh_every: 10" > /etc/salt/minion.d/grains_refresh.conf
        ]]>
        </source>
      </script>
      <script>
        <chrooted config:type="boolean">true</chrooted>
        <filename>configure_timesyncd.sh</filename>
        <interpreter>shell</interpreter>
        <source><![CDATA[
        #!/bin/sh
        sed -i -e 's|#NTP=.*|NTP=10.1.1.1 192.168.0.31 192.168.0.1|g' /etc/systemd/timesyncd.conf
        timedatectl set-ntp true
        ]]>
        </source>
      </script>
    </chroot-scripts>
  </scripts>
</profile>
